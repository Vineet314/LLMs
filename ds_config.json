{
  "train_batch_size": 2048,
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 1,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 3e-4,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.1}
  },
  "scheduler": {
    "type": "WarmupDecayLR",
    "params": {
        "total_num_steps": 2500,
        "warmup_min_lr": 3e-5,
        "warmup_max_lr": 3e-4,
        "warmup_num_steps": 100}
  },
  "bf16": {
    "enabled": true,
    "initial_scale_power": 16
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true},
    "contiguous_gradients": true,
    "overlap_comm": true
  },
  "steps_per_print": 10,
  "wall_clock_breakdown": false
}